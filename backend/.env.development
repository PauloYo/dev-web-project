# Configuração de Desenvolvimento - Local PostgreSQL
# =================================================

# Configuração do Servidor
PORT=3001
NODE_ENV=development

# Configuração do Banco de Dados Local
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dev_web_project
DB_USER=postgres
DB_PASSWORD=admin
DB_SSL=false

# Configurações Básicas do Pool de Conexões
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT=60000
DB_CREATE_TIMEOUT=8000
DB_DESTROY_TIMEOUT=5000
DB_CREATE_RETRY_INTERVAL=200
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000

# Configurações de Desenvolvimento
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# Configurações de CORS (desenvolvimento)
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configurações de Rate Limiting (mais permissivo em dev)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Configurações de Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Configurações de Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Configurações de Email (opcional para desenvolvimento)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@localhost
