# Configuração do Servidor
PORT=3001
NODE_ENV=development

# Configuração do Banco de Dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dev_web_project
DB_USER=postgres
DB_PASSWORD=admin

# Exemplo de configuração para Aiven (descomente e ajuste conforme necessário)
# DB_HOST=your-project-your-service.aivencloud.com
# DB_PORT=12345
# DB_NAME=defaultdb
# DB_USER=avnadmin
# DB_PASSWORD=your-password

# Configuração SSL (necessário para Aiven)
DB_SSL=false
# Para Aiven, defina como true e configure o certificado CA
# DB_SSL=true
# DB_CA_CERT=path/to/ca-certificate.crt
# Ou cole o conteúdo do certificado diretamente:
# DB_CA_CERT="-----BEGIN CERTIFICATE-----
# MIIDQTCCAimgAwIBAgITBmyfz5m/jAo54vB4ikPmljZbyjANBgkqhkiG9w0BAQsF
# ...
# -----END CERTIFICATE-----"

# Configurações Avançadas do Pool de Conexões
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT=60000
DB_CREATE_TIMEOUT=8000
DB_DESTROY_TIMEOUT=5000
DB_CREATE_RETRY_INTERVAL=200
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000