# Configurações de conexão com o banco de dados
DB_HOST=localhost           # Endereço do banco de dados (ex: localhost)
DB_PORT=5432                # Porta do banco de dados (ex: 5432 para PostgreSQL)
DB_NAME=meu_banco           # Nome do banco de dados (ex: dev_web_db)
DB_USER=usuario             # Usuário do banco de dados (ex: postgres)
DB_PASSWORD=senha           # Senha do banco de dados (ex: minha_senha_segura)
DB_CA_CERT=                 # Caminho para o certificado CA (se necessário para SSL, ex: /path/to/ca.crt)
DB_SSL=false                # Usar conexão SSL? (true/false)

# Configurações de pool de conexões
DB_CONNECTION_TIMEOUT=5000      # Tempo limite para conectar (ms, ex: 5000)
DB_IDLE_TIMEOUT=10000           # Tempo limite de conexão ociosa (ms, ex: 10000)
DB_MAX_CONNECTIONS=10           # Número máximo de conexões no pool (ex: 10)
DB_MIN_CONNECTIONS=0            # Número mínimo de conexões no pool (ex: 0)
DB_ACQUIRE_TIMEOUT=60000        # Tempo limite para adquirir conexão (ms, ex: 60000)
DB_CREATE_TIMEOUT=3000          # Tempo limite para criar conexão (ms, ex: 3000)
DB_DESTROY_TIMEOUT=5000         # Tempo limite para destruir conexão (ms, ex: 5000)
DB_CREATE_RETRY_INTERVAL=200    # Intervalo de retry para criar conexão (ms, ex: 200)
DB_STATEMENT_TIMEOUT=           # Tempo limite para execução de statement (ms, ex: 30000)
DB_QUERY_TIMEOUT=               # Tempo limite para execução de query (ms, ex: 30000)

# Configurações gerais da aplicação
PORT=3000                   # Porta em que a aplicação irá rodar (ex: 3000)
NODE_ENV=development        # Ambiente da aplicação (development, production, test)

