# Configuração de Produção - Aiven PostgreSQL
# =============================================
# Este arquivo contém as configurações recomendadas para produção com Aiven
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Configuração do Servidor
PORT=3001
NODE_ENV=production

# Configuração do Banco de Dados Aiven
DB_HOST=your-project-your-service.aivencloud.com
DB_PORT=12345
DB_NAME=defaultdb
DB_USER=avnadmin
DB_PASSWORD=your-generated-password
DB_SSL=true

# Certificado CA (escolha uma das opções abaixo)
# Opção 1: Arquivo (recomendado)
DB_CA_CERT=./certs/ca.pem

# Opção 2: Conteúdo direto (descomente se usar esta opção)
# DB_CA_CERT="-----BEGIN CERTIFICATE-----
# MIIDQTCCAimgAwIBAgITBmyfz5m/jAo54vB4ikPmljZbyjANBgkqhkiG9w0BAQsF
# ADBOMQswCQYDVQQGEwJVUzEQMA4GA1UEBwwHU2VhdHRsZTEQMA4GA1UECgwHV29s
# ...seu certificado completo...
# -----END CERTIFICATE-----"

# Configurações Otimizadas para Aiven
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=30000
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT=60000
DB_CREATE_TIMEOUT=8000
DB_DESTROY_TIMEOUT=5000
DB_CREATE_RETRY_INTERVAL=200
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000

# Configurações de Segurança
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Configurações de CORS (ajuste conforme necessário)
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações de Upload (se aplicável)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Configurações de Email (se aplicável)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
